<%= render  "layouts/head" %>
  <main role="main" class="container">
    <h1>Categories</h1>
    <%= link_to 'New Category', new_category_path %>
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>User</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody id="categories">
            <%= render "row", categories: @categories, class: "categories" %>
        </tbody>
      </table>
      <%= will_paginate @categories %>
        <br>
  </main>
  <div id="modal"></div>
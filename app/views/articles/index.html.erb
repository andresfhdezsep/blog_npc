<%= render partial: "layouts/head" %>
  <main role="main" class="container">
    <h1>Articles</h1>
    <%= link_to 'New Article', new_article_path, remote: true %>
        <table class="table">
          <thead>
            <tr>
              <th>Title</th>
              <th>Text</th>
              <th>User</th>
              <th>Category</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          </thead>
          <tbody id="articles">
            <%= render "row", articles: @articles, class: "articles" %>
          </tbody>
        </table>
        <%= will_paginate @articles %>
          <br>
  </main>
  <div id="modal"></div>
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <% @sliders.each do |slider| %>
            <li data-target="#carouselExampleIndicators" data-slide-to="<% slider.id %>" class="<% concat 'active' if slider.active == true %>"></li>
            <% end %>
    </ol>
    <div class="carousel-inner">
        <% @sliders.each do |slider| %>
            <div class="carousel-item <% concat 'active' if slider.active == true %>">
                <img class="d-block w-100" src="images/negro.png" height="400px" alt="First slide">
                <div class="carousel-caption d-none d-md-block">
                    <h1 class="display-4 font-italic blog-title">
                        <%= slider.title %>
                    </h1>
                    <p class="lead my-3">
                        <%= slider.text[0..47] %>
                            <% concat "..." if slider.text.length > 47 %>
                    </p>
                    <p class="lead mb-0">
                        <%= link_to  "Continuar leyendo...", article_path(slider), class: "text-white font-weight-bold" %>
                    </p>
                </div>
            </div>
            <% end %>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>